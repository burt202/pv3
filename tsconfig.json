{
  "compilerOptions": {
    "plugins": [{"name": "typescript-tslint-plugin"}],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "target": "es2018",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noErrorTruncation": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
